<Window x:Class="Shelltest1.AddServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shelltest1"
        mc:Ignorable="d"
        Title="AddServerWindow" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="tbHostname" HorizontalAlignment="Left" Height="23" Margin="62,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbUsername" HorizontalAlignment="Left" Height="23" Margin="62,108,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Height="23" Margin="62,176,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="IP / Hostname" HorizontalAlignment="Left" Margin="62,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Username" HorizontalAlignment="Left" Margin="62,77,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy1" Content="Password" HorizontalAlignment="Left" Margin="62,145,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSave" Content="Save" Margin="108,239,109,0" VerticalAlignment="Top" Click="btnSave_Click"/>

    </Grid>
</Window>
